{
  "name": "descarte-certo-site",
  "version": "1.0.0",
  "description": "Plataforma Educacional e Ecológica com IA - Descarte Certo",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:vercel": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "cd server && npm start",
    "vercel-build": "npm run build:vercel"
  },
  "keywords": [
    "sustentabilidade",
    "reciclagem",
    "educação",
    "ia",
    "react"
  ],
  "author": "Descarte Certo Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "gh-pages": "^6.3.0",
    "prisma": "^6.11.1"
  }
}
